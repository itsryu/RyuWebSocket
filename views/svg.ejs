<?xml version="1.0" encoding="UTF-8"?>
<svg xmlns="http://www.w3.org/2000/svg" width="450" height="150" viewBox="0 0 450 150">
  <!-- Fundo -->
  <rect width="100%" height="100%" rx="<%= borderRadius %>" fill="<%= backgroundColor %>"/>
  
  <!-- Avatar (círculo com imagem) -->
  <defs>
    <clipPath id="avatarClip">
      <circle cx="75" cy="75" r="32"/>
    </clipPath>
  </defs>
  <image href="<%= userAvatar %>" x="43" y="43" width="64" height="64" clip-path="url(#avatarClip)"/>
  <circle cx="75" cy="75" r="34" fill="none" stroke="<%= statusColor %>" stroke-width="4"/>
  
  <!-- Textos -->
  <text x="150" y="60" font-family="Segoe UI" font-size="20" fill="white" font-weight="bold"><%= userNickname %></text>
  <text x="150" y="85" font-family="Segoe UI" font-size="14" fill="white" opacity="0.7">
    <tspan><%= statusText %></tspan>
  </text>
  
  <!-- Atividades -->
  <% if (hasActivities) { %>
    <rect x="150" y="100" width="280" height="25" rx="6" fill="rgba(255,255,255,0.1)"/>
    <text x="160" y="118" font-family="Segoe UI" font-size="14" fill="white">
      <%= activityText %>
    </text>
  <% } else { %>
    <text x="150" y="118" font-family="Segoe UI" font-size="14" fill="#ccc" font-style="italic">
      Não estou fazendo nada no momento
    </text>
  <% } %>
</svg>